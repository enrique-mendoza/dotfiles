{
  "custom/launcher": {
    "format": "󰈸",
    "on-click": "rofi -show drun -theme /home/wiru/.config/rofi/config.rasi",
    "on-click-right": "rofi -show drun -theme /home/wiru/.config/rofi/config.rasi"
  },
  "clock": {
    "format": "󰥔 {:%H:%M}",
    "tooltip": "true",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": " {:%m/%d/%y}"
  },
  "cpu": {
    "format": " {icon0}{icon1}{icon2}{icon3}{icon4} {usage}%",
    "format-icons": [
      "▁",
      "▂",
      "▃",
      "▄",
      "▅",
      "▆",
      "▇",
      "█"
    ],
    "format-alt": "󰻠 {avg_frequency} GHz",
    "interval": 5
  },
  "memory": {
    "format": " {}%",
    "format-alt": " {used:0.1f}G/{total:0.1f}G",
    "interval": 5
  },
  "disk": {
    "format": " {used}",
    "format-alt": " {used}/{total}",
    "interval": 5,
    "path": "/home"
  },
  "sway/workspaces": {
    "all-outputs": true,
    "format": "{name}: {icon}",
    "disable-scroll": false,
    "current-only": false,
    "format-icons": {
      "urgent": "",
      "focused": "",
      "default": "",
      "sort-by-number": true
    }
  },
  "hyprland/workspaces": {
    "all-outputs": true,
    "format": "{name}: {icon}",
    "disable-scroll": false,
    "current-only": false,
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": "",
      "sort-by-number": true
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    }
  },
  "custom/updates": {
    "format": " {}",
    "interval": 3600,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "termite -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar",
    "signal": 8
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "  Muted",
    "format-icons": {
      "default": [
        "",
        "",
        " "
      ]
    },
    "on-click": "pavucontrol"
  },
  "sway/language": {
    "format": "󰌌 {}",
    "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "us",
    "format-es": "latam"
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": {
      "numlock": "{icon}",
      "capslock": "{icon}"
    },
    "format-icons": {
      "locked": "locked",
      "unlocked": "unlocked"
    }
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-discharging": "{icon} {capacity}%",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": {
      "charging": [
        "󰢜",
        "󰂆",
        "󰂇",
        "󰂈",
        "󰢝",
        "󰂉",
        "󰢞",
        "󰂊",
        "󰂋",
        "󰂅"
      ],
      "default": [
        "󰁺",
        "󰁻",
        "󰁼",
        "󰁽",
        "󰁾",
        "󰁿",
        "󰂀",
        "󰂁",
        "󰂂",
        "󰁹"
      ]
    },
    "format-full": "󰂅",
    "tooltip-format": "{health}% of health with {cycles} cycles",
    "tooltip-format-discharging": "{power:>1.0f}W↓ {capacity}%",
    "tooltip-format-charging": "{power:>1.0f}W↑ {capacity}%",
    "interval": 5,
    "states": {
      "warning": 20,
      "critical": 10
    }
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "󰃚",
      "󰃛",
      "󰃜",
      "󰃝",
      "󰃞",
      "󰃟",
      "󰃠"
    ]
  },
  "network": {
    "format-icons": [
      "󰤯",
      "󰤟",
      "󰤢",
      "󰤥",
      "󰤨"
    ],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "󰀂",
    "format-disconnected": "󰤮",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "spacing": 1,
    "on-click": "kitty --class nmwui nmtui"
  },
  "tray": {
    "icon-size": 13,
    "tooltip": false,
    "spacing": 10
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout &",
    "format": "⏻"
  }
}
