{
  "custom/launcher": {
    "format": "󰈸",
    "on-click": "rofi -show drun -theme /home/wiru/.config/rofi/config.rasi",
    "on-click-right": "rofi -show drun -theme /home/wiru/.config/rofi/config.rasi"
  },
  "custom/weather": {
    "tooltip": true,
    "format": "{}",
    "restart-interval": 300,
    "exec": "~/.config/waybar/scripts/waybar-wttr.py",
    "return-type": "json"
  },
  "clock": {
    "format": "󰥔 {:%H:%M}",
    "tooltip": "true",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": " {:%d/%m}"
  },
  "cpu": {
    "format": " {icon0}{icon1}{icon2}{icon3}{icon4} {usage}%",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
    "format-alt": "󰻠 {avg_frequency} GHz",
    "interval": 5
  },
  "memory": {
    "format": " {}%",
    "format-alt": " {used:0.1f}G/{total:0.1f}G",
    "interval": 5
  },
  "disk": {
    "format": " {used}",
    "format-alt": " {used}/{total}",
    "interval": 5,
    "path": "/home"
  },
  "sway/workspaces": {
    "all-outputs": true,
    "format": "{name}: {icon}",
    "disable-scroll": false,
    "current-only": false,
    "format-icons": {
      "urgent": "",
      "focused": "",
      "default": "",
      "sort-by-number": true
    }
  },
  "custom/updates": {
    "format": "󰮯 {}",
    "interval": 3600,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "termite -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar",
    "signal": 8
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "  Muted",
    "format-icons": {
      "default": ["", "", " "]
    },
    "on-click": "pavucontrol"
  },
  "sway/language": {
    "format": "󰌌 {}",
    "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": {
	"numlock": "{icon}",
	"capslock": "{icon}"                                                                                                                                                       
    },
    "format-icons": {
	"locked": "",
	"unlocked": ""
    }
  },
  "battery": {
    "design-capacity": false,
    "states": {
      "good": 80,
      "warning": 20,
      "critical": 10
    },
    "full-at": 80,
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {time}",
    "format-plugged": "",
    "format-alt": "{icon} {power}W",
    "format-icons": [
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ],
    "tooltip-format": "{health}% of health with {cycles} cycles" 
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["󰃚", "󰃛", "󰃜", "󰃝", "󰃞", "󰃟", "󰃠"]
  },
  "network": {
    "format-wifi": "󰤨 ",
    "format-ethernet": "󰈀 {essid}: Aesthetic",
    "format-linked": "  {ifname} (No IP)",
    "format-disconnected": "󰤭",
    "format-alt": "󰛳  {ifname}: {ipaddr}/{cidr}",
    "tooltip-format": "{essid}"
  },
  "tray": {
    "icon-size": 13,
    "tooltip": false,
    "spacing": 10
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout &",
    "format": "⏻"
  }
}
